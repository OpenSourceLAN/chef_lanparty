
<% @forwarded_zones.each do |zone| %>
zone "<%= zone['name'] %>" {
   type forward;
   forward only;
   forwarders {
   <% zone['forwarders'].each do |forwarder| %>
     <%= forwarder %>;
   <% end %>
   };
};
<% end %>

<% @zones.each do |zone| %>
zone "<%= zone['name'] %>" {
	type master;
	file "<%= @zonefile_location %><%= zone.fetch("file", "db.#{zone['name']}") %>";
	<% if zone['rndc'] then %> allow-update { key "<%= zone['rndc'] %>"; }; <% end %>
};
<% end %>
